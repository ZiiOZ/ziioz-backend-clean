{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": [
    "index.ts",
    "api/**/*.ts",
    "src/**/*",
    "backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
